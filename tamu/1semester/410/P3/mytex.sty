%
% TWO FIGURES WITH CAPTIONS
%

\newcommand{\pspair}[4]{
  \epsfxsize = 0.48\textwidth
  \begin{minipage}[t]{0.48\textwidth}
    \begin{center}
      \leavevmode
      \epsfbox{#1}
      ~\\(a) \  #2
    \end{center}
  \end{minipage}
  \hfill
  \epsfxsize = 0.48\textwidth
  \begin{minipage}[t]{0.48\textwidth}
    \begin{center}
      \leavevmode
      \epsfbox{#3}
      ~\\(b) \ #4
    \end{center}
  \end{minipage}
}

